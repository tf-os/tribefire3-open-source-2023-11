<project xmlns:artifact="antlib:org.apache.maven.artifact.ant" xmlns:bt="antlib:com.braintribe.build.ant.tasks" basedir="." default="compile-grammar" name="gmml">

	<target name="compile-grammar">

		<property name="version" value="4.5" />
		<bt:dependencies pathId="compiler-path">
			<bt:dependency groupId="org.antlr" artifactId="antlr4" version="${version}" scope="runtime" />
		</bt:dependencies>

		<property name="output" value="src/com/braintribe/model/processing/manipulation/parser/impl/autogenerated" />

		<java classname="org.antlr.v4.Tool" failonerror="true" fork="true">
			<classpath refid="compiler-path" />
			<arg value="-o" />
			<arg value="${output}" />
			<arg value="res/GmmlLexer.g4" />
		</java>
		<java classname="org.antlr.v4.Tool" failonerror="true" fork="true">
			<classpath refid="compiler-path" />
			<arg value="-o" />
			<arg value="${output}" />
			<arg value="res/GmmlParser.g4" />
		</java>
	</target>

</project>
