<?xml version="1.0"?>
<settings>
	<localRepository>C:\Mvn</localRepository>
  	<servers>
		<server>
			<id>central.mirror</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
		</server>
		<server>
			<id>central</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
		</server>
		<server>
			<id>core-dev</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
		</server>
		<server>
			<id>adx-dev</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
		</server>
		<server>
			<id>devrock</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
		</server>
	</servers>
	<mirrors>
		<mirror>
			<id>central.mirror</id>
			<url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/third-party/</url>
			<mirrorOf>*,!devrock,!core-dev,!adx-dev</mirrorOf>
		</mirror>
		<mirror>
			<id>central</id>
			<url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/third-party/</url>
			<mirrorOf>*,!devrock,!core-dev,!adx-dev</mirrorOf>
		</mirror>
	</mirrors>
	<profiles>
		<!-- core profile -->
		<profile>
			<id>core</id>
			<repositories>
				<repository>
					<id>third-party</id>
					<layout>default</layout>
					<url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/third-party/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
				<repository>
					<id>core-dev</id>
					<layout>default</layout>
					<url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/core-dev/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
                <repository>
                    <id>adx-dev</id>
                    <layout>default</layout>
                    <url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/adx-dev/</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                </repository>            
			</repositories>
			<activation>
				<property>
					<name>env.PROFILE_USECASE</name>
					<value>CORE</value>
				</property>
			</activation>
			<properties>
				<updateReflectingRepositories>third-party,core-dev,adx-dev</updateReflectingRepositories>
				<ravenhurst-context>/</ravenhurst-context>
				<ravenhurst-url-third-party>${env.DEVROCK_TESTS_RAVENHURST_BASE_URL}/rest/third-party</ravenhurst-url-third-party>
				<ravenhurst-url-core-dev>${env.DEVROCK_TESTS_RAVENHURST_BASE_URL}/rest/core-dev</ravenhurst-url-core-dev>
				<ravenhurst-url-adx-dev>${env.DEVROCK_TESTS_RAVENHURST_BASE_URL}/rest/adx-dev/</ravenhurst-url-adx-dev>
				<target-repository>adx-dev</target-repository>
			</properties>
		</profile>

      <!-- devrock profile -->
      <profile>
          <id>devrock</id>
          <repositories>
              <repository>
                  <id>devrock</id>
                  <layout>default</layout>
                  <url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/devrock/</url>
                  <snapshots>
                      <enabled>false</enabled>
                  </snapshots>
                  <releases>
                      <enabled>true</enabled>
                      <updatePolicy>never</updatePolicy>
                  </releases>
              </repository>
          </repositories>
         
          <activation>
              <property>
                  <name>env.PROFILE_USECASE</name>
                  <value>DEVROCK</value>
              </property>
          </activation>
         
          <properties>
              <!-- ravenhurst settings -->
              <updateReflectingRepositories>devrock</updateReflectingRepositories>
              <ravenhurst-context-devrock>/</ravenhurst-context-devrock>
              <ravenhurst-url-devrock>${env.DEVROCK_TESTS_RAVENHURST_BASE_URL}/rest/devrock</ravenhurst-url-devrock>
              <!-- trustworthy repositories of this profile -->
              <trustworthyRepositories>devrock</trustworthyRepositories>
              <!-- automatic deploy target -->
              <target-repository>devrock</target-repository>
          </properties>
      </profile>


	</profiles>
</settings>
