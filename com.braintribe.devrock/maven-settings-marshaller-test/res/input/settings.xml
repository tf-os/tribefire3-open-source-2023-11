<?xml version="1.0"?>
<settings>
	<localRepository>${env.M2_REPO}/</localRepository>
	<servers>
		<server>
			<id>central.mirror</id>
			<username>devrock-tests-dummy</username>
			<password>nonewhatsoever</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>
		<server>
			<id>central</id>
			<username>devrock-tests-dummy</username>
			<password>nonewhatsoever</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>
		<server>
			<id>devrock</id>
			<username>devrock-tests-dummy</username>
			<password>nonewhatsoever</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>
		<server>
			<id>core-dev</id>
			<username>devrock-tests-dummy</username>
			<password>nonewhatsoever</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>
		
		<server>
			<id>custom-assets</id>
			<username>devrock-tests-dummy</username>
			<password>nonewhatsoever</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>

	</servers>
	<mirrors>
		<mirror>
			<id>central.mirror</id>
			<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
			<mirrorOf>*,!devrock,!core-dev,!custom-assets</mirrorOf>
		</mirror>
		<mirror>
			<id>central</id>
			<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
			<mirrorOf>*,!devrock,!core-dev,!custom-assets</mirrorOf>
		</mirror>
		<mirror>
			<id>devrock</id>
			<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/devrock/</url>
			<mirrorOf>devrock</mirrorOf>
		</mirror>
		<mirror>
			<id>core-dev</id>
			<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/core-dev/</url>
			<mirrorOf>core-dev</mirrorOf>
		</mirror>
		<mirror>
			<id>custom-assets</id>
			<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/custom-assets/</url>
			<mirrorOf>custom-assets</mirrorOf>
		</mirror>
	</mirrors>
	<profiles>
		<profile>
			<id>platform-assets</id>
			<activation>
				<property>
					<name>env.PLATFORM_ASSETS</name>
					<value>ACTIVE</value>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>custom-assets</id>
					<layout>default</layout>
					<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/custom-assets/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
			</repositories>
			<properties>
				<!-- ravenhurst settings -->
				<updateReflectingRepositories>custom-assets</updateReflectingRepositories>
				<ravenhurst-context-custom-assets>/</ravenhurst-context-custom-assets>
				<ravenhurst-url-custom-assets>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/custom-assets</ravenhurst-url-custom-assets>
				<trustworthyRepositories>*</trustworthyRepositories>
			</properties>
		</profile>
		<profile>
			<id>braintribe</id>
			<repositories>
				<repository>
					<id>third-party</id>
					<layout>default</layout>
					<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
				<repository>
					<id>devrock</id>
					<layout>default</layout>
					<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/devrock/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
				<repository>
					<id>core-dev</id>
					<layout>default</layout>
					<url>DEVROCK_TESTS_REPOSITORY_BASE_URL/core-dev/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
			</repositories>
			<pluginRepositories>
                <pluginRepository>
                    <id>third-party</id>
                    <layout>default</layout>
                    <url>DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                </pluginRepository>
                <pluginRepository>
                  <id>core-dev</id>
                    <layout>default</layout>
                    <url>DEVROCK_TESTS_REPOSITORY_BASE_URL/core-dev/</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                </pluginRepository>
            </pluginRepositories>
			<properties>
				<!-- ravenhurst settings -->
				<updateReflectingRepositories>third-party,devrock,core-dev,custom-assets</updateReflectingRepositories>
				<ravenhurst-context-third-party>/</ravenhurst-context-third-party>
				<ravenhurst-url-third-party>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/third-party</ravenhurst-url-third-party>
				<ravenhurst-context-devrock>/</ravenhurst-context-devrock>
				<ravenhurst-url-devrock>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/devrock</ravenhurst-url-devrock>
				<ravenhurst-context-core-dev>/</ravenhurst-context-core-dev>
				<ravenhurst-url-core-dev>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/core-dev</ravenhurst-url-core-dev>
				<trustworthyRepositories>*</trustworthyRepositories>
			</properties>
		</profile>
	</profiles>
	<activeProfiles>
		<activeProfile>braintribe</activeProfile>
		<activeProfile>platform-assets</activeProfile>
	</activeProfiles>
</settings>
