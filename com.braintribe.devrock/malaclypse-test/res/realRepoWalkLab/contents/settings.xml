<?xml version="1.0" ?>
<settings>
	<localRepository>${env.HOMEDRIVE}/${env.HOMEPATH}/.m2/repository</localRepository>
	<servers>
		 <server>
	      <id>central.mirror</id>
	      <username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
	      <password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
	      <filePermissions>664</filePermissions>
	      <directoryPermissions>775</directoryPermissions>
	    </server>
	    <server>
	      <id>braintribe.release</id>
	      <username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
	      <password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
	      <filePermissions>664</filePermissions>
	      <directoryPermissions>775</directoryPermissions>
	    </server>
	</servers>
	<mirrors>
		<mirror>
			<id>braintribe.release</id>
			<url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/releases/tribefire/2.0/2.0.0-rc5</url>
			<mirrorOf>braintribe.release</mirrorOf>
		</mirror>
		<mirror>
			<id>central.mirror</id>
			<url>${env.DEVROCK_TESTS_REPOSITORY_BASE_URL}/third-party</url>
			<mirrorOf>third-party</mirrorOf>
		</mirror>
	</mirrors>
	<profiles>
		<profile>
			<id>real.repo.test</id>
			<repositories>
				<repository>
					<id>braintribe.release</id>
					<layout>default</layout>
					<url>http://unused</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
				<repository>
					<id>third-party</id>
					<layout>default</layout>
					<url>http://unused</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
			</repositories>
			<properties>
				<!-- ravenhurst settings -->
				<updateReflectingRepositories>third-party</updateReflectingRepositories>				 				
				
				<ravenhurst-third-party>${env.DEVROCK_TESTS_RAVENHURST_BASE_URL}/third-party</ravenhurst-third-party>						
			</properties>
		</profile>
	</profiles>
	<activeProfiles>
		<activeProfile>real.repo.test</activeProfile>
	</activeProfiles>
</settings>
