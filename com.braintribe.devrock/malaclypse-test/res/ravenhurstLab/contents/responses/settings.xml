<?xml version="1.0"?>
<settings>
	
	<localRepository>${user.home}/.m2/repository-groups/</localRepository>
	
	<servers>

		<!-- core profile servers -->
		<server>
			<id>central.mirror</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>

		<server>
			<id>core-dev</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>		

		<server>
			<id>central</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>		

		<!-- devrock server -->
		<server>
			<id>devrock</id>
			<username>${env.DEVROCK_TESTS_READ_USERNAME}</username>
			<password>${env.DEVROCK_TESTS_READ_PASSWORD}</password>
			<filePermissions>664</filePermissions>
			<directoryPermissions>775</directoryPermissions>
		</server>
	</servers>

	<mirrors>
		<!-- core mirrors -->
		<mirror>
			<id>central.mirror</id>
			<url>https://DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
			<mirrorOf>*,!devrock,!core-dev</mirrorOf>
		</mirror>
		<mirror>
			<id>central</id>
			<url>https://DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
			<mirrorOf>*,!devrock,!core-dev</mirrorOf>
		</mirror>
	</mirrors>

	<profiles>
		
		<!-- core profile -->
		<profile>
			<id>core</id>
			<repositories>
				<repository>
					<id>third-party</id>
					<layout>default</layout>
					<url>https://DEVROCK_TESTS_REPOSITORY_BASE_URL/third-party/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>			
				<repository>
					<id>core-dev</id>
					<layout>default</layout>
					<url>https://DEVROCK_TESTS_REPOSITORY_BASE_URL/core-dev/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>			
			</repositories>
			
			<activation>
				<property>
					<name>env.PROFILE_USECASE</name>
					<value>CORE</value>
				</property>
			</activation>
	
			<properties>
				<!-- ravenhurst settings -->
				<updateReflectingRepositories>third-party,core-dev</updateReflectingRepositories>
				<ravenhurst-context>/</ravenhurst-context>
				<!-- ravenhurst url for third pary repository -->
				<ravenhurst-url-third-party>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/third-party</ravenhurst-url-third-party>
				<!-- ravenhurst url for core-dev repository -->
				<ravenhurst-url-core-dev>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/core-dev</ravenhurst-url-core-dev>
				<!-- trustworthy repositories of this profile -->
				<trustworthyRepositories>third-party,core-dev</trustworthyRepositories>
				<!-- automatic deploy target -->
				<target-repository>core-dev</target-repository>
			</properties>
		</profile>

		<!-- devrock profile -->
		<profile>
			<id>devrock</id>
			<repositories>
				<repository>
					<id>devrock</id>
					<layout>default</layout>
					<url>https://DEVROCK_TESTS_REPOSITORY_BASE_URL/devrock/</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>
			</repositories>
			
			<activation>
				<property>
					<name>env.PROFILE_USECASE</name>
					<value>DEVROCK</value>
				</property>
			</activation>
			
			<properties>
				<!-- ravenhurst settings -->
				<updateReflectingRepositories>devrock</updateReflectingRepositories>
				<ravenhurst-context-devrock>/</ravenhurst-context-devrock>
				<ravenhurst-url-devrock>https://DEVROCK_TESTS_RAVENHURST_BASE_URL/devrock</ravenhurst-url-devrock>
				<!-- trustworthy repositories of this profile -->
				<trustworthyRepositories>devrock</trustworthyRepositories>
				<!-- automatic deploy target -->
				<target-repository>devrock</target-repository>
			</properties>
		</profile>	
	</profiles>
	<activeProfiles>
		<activeProfile>core</activeProfile>
		<activeProfile>devrock</activeProfile>
	</activeProfiles>
</settings>
