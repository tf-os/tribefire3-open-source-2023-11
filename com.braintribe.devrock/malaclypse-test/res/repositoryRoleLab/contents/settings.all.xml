<?xml version="1.0"?>
<settings>
	<localRepository>${env.M2_REPO}</localRepository>
 <servers>
  
    <server>
      <id>mirror.base</id>
      <username>builder</username>
      <password>operating2005</password>
      <filePermissions>664</filePermissions>
      <directoryPermissions>775</directoryPermissions>
    </server>
    <server>
      <id>mirror.release</id>
      <username>builder</username>
      <password>operating2005</password>
      <filePermissions>664</filePermissions>
      <directoryPermissions>775</directoryPermissions>
    </server>
    <server>
      <id>mirror.snapshot</id>
      <username>builder</username>
      <password>operating2005</password>
      <filePermissions>664</filePermissions>
      <directoryPermissions>775</directoryPermissions>
    </server>  	
  </servers>
  
  <mirrors>
    <mirror>
      <id>mirror.base</id>
      <url>http://localhost:${env.port}/archive/</url>
      <mirrorOf>braintribe.Base</mirrorOf>
    </mirror>
    <mirror>
      <id>mirror.release</id>
      <url>http://localhost:${env.port}/release/</url>
      <mirrorOf>braintribe.Release</mirrorOf>
    </mirror>
    <mirror>
      <id>mirror.snapshot</id>
      <url>http://localhost:${env.port}/snapshot/</url>
      <mirrorOf>braintribe.Snapshot</mirrorOf>
    </mirror>
      
  </mirrors>

	<profiles>
		<profile>
			<id>braintribe</id>
			<repositories>
				<repository>
					<id>braintribe.Base</id>
					<layout>default</layout>
					<url>http://UNUSED</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>never</updatePolicy>
					</releases>
				</repository>		
				<repository>
					<id>braintribe.Release</id>
					<layout>default</layout>
					<url>http://UNUSED</url>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
					<releases>
						<enabled>true</enabled>
					</releases>
				</repository>
				<repository>
					<id>braintribe.Snapshot</id>
					<layout>default</layout>
					<url>http://UNUSED</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
					<releases>
						<enabled>false</enabled>
					</releases>
				</repository>
			</repositories>
			<properties>		
				<trustworthyRepositories>*</trustworthyRepositories>
				<listingLenientRepositories>*</listingLenientRepositories>
			</properties>
		</profile>
	</profiles>

	<activeProfiles>
		<activeProfile>braintribe</activeProfile>
	</activeProfiles>
</settings>
