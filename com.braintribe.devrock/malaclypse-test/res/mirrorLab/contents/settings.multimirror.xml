<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<localRepository>/path/to/localRepository</localRepository>

	<servers>
			<server>
					<id>archiva.mirror</id>
					<username>USER</username>
					<password>PASSWORD</password>
					<filePermissions>664</filePermissions>
					<directoryPermissions>775</directoryPermissions>
			</server>
			<server>
					<id>tribefire.mirror</id>
					<username>USER</username>
					<password>PASSWORD</password>
					<filePermissions>664</filePermissions>
					<directoryPermissions>775</directoryPermissions>
			</server>
			<server>
					<id>empty.mirror</id>
					<username>NOT_USED</username>
					<password>NOT_USED</password>
			</server>
	</servers>

	<mirrors>
			<mirror>
					<id>archiva.mirror</id>
					<url>http://archiva.bt.com/repository/standalone/</url>
					<mirrorOf>!tribefire,!central,!empty,*</mirrorOf>
			</mirror>
			<mirror>
					<id>tribefire.mirror</id>
					<url>https://artifactory.bt.com/tribefire-repository-2.0-snapshot</url>
					<mirrorOf>tribefire</mirrorOf>
			</mirror>
			<mirror>
					<id>empty.mirror</id>
					<url>file:///home/mla/Documents/Dev/firectrl/repositories/empty</url>
					<mirrorOf>empty,central</mirrorOf>
			</mirror>
	</mirrors>

	<profiles>
			<profile>
					<id>default_profile</id>
					<repositories>
						<repository>
							<id>tribefire</id>
							<layout>default</layout>
							<url>https://artifactory.bt.com/tribefire-repository-2.0-snapshot</url>
							<snapshots>
								<enabled>false</enabled>
							</snapshots>
							<releases>
								<enabled>true</enabled>
								<updatePolicy>never</updatePolicy>
							</releases>
						</repository>
							<repository>
									<id>archiva</id>
									<layout>default</layout>
									<url>http://archiva.bt.com/repository/standalone/</url>
									<snapshots>
											<enabled>false</enabled>
									</snapshots>
									<releases>
											<enabled>true</enabled>
											<updatePolicy>never</updatePolicy>
									</releases>
						</repository>
						<repository>
							<id>empty</id>
							<layout>default</layout>
							<url>file:///home/mla/Documents/Dev/firectrl/repositories/empty</url>
							<snapshots>
								<enabled>false</enabled>
							</snapshots>
							<releases>
								<enabled>true</enabled>
								<updatePolicy>never</updatePolicy>
							</releases>
						</repository>
					</repositories>
			</profile>
	</profiles>
	<activeProfiles>
			<activeProfile>default_profile</activeProfile>
	</activeProfiles>
</settings>
