<?xml version="1.0" encoding="UTF-8"?>
<mime-info>
   <mime-type type="text/x-yaml">
    <_comment>YAML source code</_comment>
    <glob pattern="*.yaml"/>
    <glob pattern="*.yml"/>
    <sub-class-of type="text/plain"/>
  </mime-type>
  
   <mime-type type="avro/binary"> <!--  https://avro.apache.org/docs/1.8.1/spec.html recommends avro/binary -->
    <_comment>Apache Avro</_comment>
    <glob pattern="*.avsc"/>
    <glob pattern="*.avro"/>
    <sub-class-of type="application/json"/>
  </mime-type>
</mime-info>
 
 
 
 
 
 
